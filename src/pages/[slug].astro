---
import { PROJECTS } from "../data/projects.ts";
import ProjectsLayout from "../layouts/projects-layout.astro";
import ArrowLeft from "../components/arrow-left.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  return PROJECTS.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
---


<ProjectsLayout title={project.title}>
  <main>
    <div>
      <div class="page-header">
        <button onclick="history.back()" class="back-link">
          <ArrowLeft />
          Back
        </button>
        <h1>{project.title}</h1>
      </div>
      
      <div class="project-hero">
        <Image height={280} width={520} src={project.src} alt={project.alt} class="project-image" loading="eager" />
      </div>
      
      <div class="rich-content" set:html={project.content || `
        <div class="project-info">
          <div class="project-tags">
            <span class="tag-label">${project.tags}</span>
          </div>
          
          <p class="project-description">${project.desc}</p>
        </div>
      `}></div>
      
      {project.link && (
        <div class="project-actions">
          <a href={project.link} target="_blank" rel="noopener noreferrer">
            View Project
          </a>
        </div>
      )}
    </div>
  </main>
</ProjectsLayout>
    

<style>
  main {
    margin-top: calc(5.5rem + 24px);
    margin-bottom: 2.5rem;
  }

  main > div {
    max-width: 1200px;
    margin: 0 auto;
  }

  .page-header {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    position: relative;
  }

  .page-header .back-link {
    position: absolute;
    left: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--clr__primary__purple);
    font-size: var(--fs__14);
    font-weight: var(--fw__medium);
    text-decoration: underline;
    transition: color 0.2s ease;
    background: transparent;
    padding: 0;
    border: none;
    cursor: pointer;
  }

  .page-header .back-link:hover {
    color: hsl(248, 90%, 50%);
    background: transparent;
  
  }

  .back-link :global(svg) {
    width: 16px;
    height: 16px;
  }

  h1 {
    font-size: var(--fs__48);
    font-weight: var(--fw__semibold);
    color: var(--clr__black1);
    margin: 0;
    flex: 1;
    text-align: center;
  }

  .rich-content {
    padding-bottom: 3rem;
    max-width: 72ch;
    margin-inline: auto;
  }

  .project-hero {
    margin-bottom: 3rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .project-hero img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* View Transition Styles */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.6s;
    animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }

  ::view-transition-old(root) {
    animation-name: slide-out;
  }

  ::view-transition-new(root) {
    animation-name: slide-in;
  }

  @keyframes slide-out {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(-200px);
      opacity: 0;
    }
  }

  @keyframes slide-in {
    from {
      transform: translateY(200px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .project-info {
    max-width: 800px;
    margin: 0 auto;
  }

  .project-tags {
    margin-bottom: 2rem;
    display: flex;
    justify-content: center;
  }

  .tag-label {
    background: var(--clr__secondary__purple);
    color: var(--clr__primary__purple);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: var(--fs__14);
    font-weight: var(--fw__medium);
  }

  .project-description {
    font-size: var(--fs__18);
    line-height: 1.7;
    color: var(--clr__black1);
    margin-bottom: 3rem;
    text-align: center;
  }

  .project-actions {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }

  /* Rich content styling for future custom content */
  .rich-content h2,
  .rich-content h3,
  .rich-content h4 {
    color: var(--clr__black1);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .rich-content h2 {
    font-size: var(--fs__32);
    font-weight: var(--fw__semibold);
  }

  .rich-content h3 {
    font-size: var(--fs__24);
    font-weight: var(--fw__medium);
  }

  .rich-content h4 {
    font-size: var(--fs__20);
    font-weight: var(--fw__medium);
  }

  .rich-content p {
    font-size: var(--fs__16);
    line-height: 1.7;
    color: var(--clr__black1);
    margin-bottom: 1.5rem;
  }

  .rich-content ul,
  .rich-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .rich-content li {
    font-size: var(--fs__16);
    line-height: 1.7;
    color: var(--clr__black1);
    margin-bottom: 0.5rem;
  }

  .rich-content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .rich-content blockquote {
    border-left: 4px solid var(--clr__primary__purple);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--clr__gray);
  }

  .rich-content code {
    background: var(--clr__secondary__purple);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: var(--fs__14);
  }

  .rich-content pre {
    background: var(--clr__ultra__black);
    color: var(--clr__white);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .rich-content pre code {
    background: none;
    padding: 0;
    color: inherit;
  }

  .project-actions a {
    background: var(--clr__primary__purple);
    color: var(--clr__white);
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: var(--fw__medium);
    font-size: var(--fs__16);
    transition: all 0.3s ease;
    display: inline-block;
  }

  .project-actions a:hover {
    background: hsl(248, 90%, 50%);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(124, 58, 237, 0.3);
  }

  @media (min-width: 768px) {
    h1 {
      font-size: var(--fs__64);
    }
    
    p {
      font-size: var(--fs__20);
    }

    .page-header .back-link {
      font-size: var(--fs__16);
    }

    .page-header .back-link :global(svg) {
      width: 18px;
      height: 18px;
    }
  }

  @media (min-width: 1024px) {
    main {
      margin-top: calc(6rem + 24px);
      margin-bottom: 5rem;
    }
  }
</style>

