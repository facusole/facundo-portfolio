---
import { Image } from "astro:assets"

const { testimony, src, alt, linkedinHref, name, role  } = Astro.props
---

<article>
    <p>"{testimony}"</p>
    <div class="wrapper">
        <Image width={80} height={80} class="people" src={src} alt={alt} loading="lazy">
        <div class="info">
            <h3><a href={linkedinHref}>{name}</a></h3>
            <h4>{role}</h4>
        </div>
    </div>
</article>

<style>

    p {
        font-size: var(--fs__18);
        font-weight: var(--fw__regular);
    }


    article {
        margin-top: 3rem;
        border: 2px solid var(--clr__ultra__black);
        border-radius: 2.5rem;

        padding: 2rem 1rem;

        max-width: 400px;
        height: 400px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;

    }


    .wrapper {
        margin-top: 2rem;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .info {
        display: grid;
        place-items: center;
        margin-top: 0;
    }
    
    .people {
        width: 4rem;
        aspect-ratio: 1;
        outline: 2px solid var(--clr__primary__purple);
        outline-offset: 3px;
        border-radius: 50%;
    }

    h3 {
        letter-spacing: -1px;
        font-size: var(--fs__20);
        font-weight: var(--fw__medium);
    }

    h3 a {
        text-decoration: none;
        color: var(--clr__primary__purple);

    }

    h4 {
        color: var(--clr__gray);
        letter-spacing: -1px;
        font-size: var(--fs__20);
        font-weight: var(--fw__regular);
    }

    @media (min-width: 768px) {

        article {
            padding: 3.5rem 3rem;

            max-width: 600px;
            height: 500px;

        }

        .people {
            width: 5rem;
        }
        p {
            font-size: var(--fs__24);
        }

        h3 {
            font-size: var(--fs__28);
        }
    }

    @media (min-width: 1024px) {

        article {
            padding: 3.5rem 5rem;
            margin-top: 4rem;

            max-width: 800px;
            height: 550px;


        }

        p {
            font-size: var(--fs__28);
        }

        h3 {
            font-size: var(--fs__28);
        }
    }
</style>