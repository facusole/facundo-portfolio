---
import SVGAnimated from "./SVGAnimated";
---

<section class="section">
  <h1>
    Front-end developer <br />
    striving for <span>clean <SVGAnimated client:load /></span> code
  </h1>
  <div>
    <img
      class="arrow"
      src="/assets/hero__bottomArrow.svg"
      alt="Arrow icon to indicate that there is more content if you scroll down"
    />
    <small>Scroll down</small>
  </div>
</section>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("fade__animation");
      }
    });
  });

  const section = document.querySelectorAll(".section");

  section.forEach((el) => observer.observe(el));
</script>

<style>
  section {
    margin-block: 3rem;
  }

  h1 {
    font-size: var(--fs__28);
    font-weight: var(--fw__medium);
    text-align: center;
    letter-spacing: -1px;
  }

  div {
    display: grid;
    place-content: center;
    place-items: center;
    margin-top: 3rem;
  }

  div img {
    animation: hop 2s linear infinite;
  }

  small {
    margin-top: 0.5rem;
    font-size: var(--fs__16);
    font-weight: var(--fw__regular);
    color: var(--clr__gray);
  }

  @keyframes hop {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-1rem);
    }
    100% {
      transform: translateY(0);
    }
  }

  /* svg and svg animation */
  span {
    position: relative;
  }

  .misc {
    position: absolute;
    width: 95%;
    height: auto;
    bottom: -0.75rem;
    left: 0;
    animation: fade-in 1.5s ease-in;
  }

  @keyframes fade-in {
    from {
      width: 0;
      scale: 0;
      opacity: 0;
    }
    to {
      width: 100%;
      scale: 1;
      opacity: 1;
    }
  }
  @media (min-width: 768px) {
    section {
      margin-block: 5rem;
    }

    h1 {
      font-size: var(--fs__40);
    }
    small {
      font-size: var(--fs__18);
    }

    .misc {
      bottom: -1.25rem;
    }
  }

  @media (min-width: 1024px) {
    section {
      margin-block: 7rem;
    }

    h1 {
      font-size: var(--fs__64);
    }

    .misc {
      bottom: -1.75rem;
    }

    .arrow {
      width: 74px;
      aspect-ratio: 1;
    }
  }
</style>
